<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.HBox?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.centerio.eshopfx.shop.ui.gui.controller.KundeController">
    <top>
        <MenuBar useSystemMenuBar="true">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem text="Save" onAction="#save">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="UP" meta="UP" shift="UP" shortcut="DOWN"/>
                    </accelerator>
                </MenuItem>
                <SeparatorMenuItem/>
                <MenuItem text="Logout" onAction="#logout">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="L" control="UP" meta="UP" shift="UP" shortcut="DOWN"/>
                    </accelerator>
                </MenuItem>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Delete"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane fx:id="kundePane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="artikelTab" text="Artikel">
                <HBox>
                    <VBox>
                        <TableView fx:id="artikelTableView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" BorderPane.alignment="CENTER"/>
                    </VBox>
                    <VBox prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER" spacing="30">
                        <VBox>
                            <Button fx:id="addToWarenkorbButton" onAction="#toWarenkorb" text="HinzufÃ¼gen"></Button>
                        </VBox>
                    </VBox>
                </HBox>
            </Tab>
            <Tab fx:id="warenkorbTab" text="Warenkorb">
                <HBox>
                    <VBox>
                        <TableView fx:id="warenkorbTableView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" BorderPane.alignment="CENTER"/>
                    </VBox>
                    <VBox prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER" spacing="30">
                        <VBox>
                            <Button fx:id="kaufenButton" onAction="#rechnungErstellen" text="Kaufen"></Button>
                        </VBox>
                    </VBox>
                </HBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
